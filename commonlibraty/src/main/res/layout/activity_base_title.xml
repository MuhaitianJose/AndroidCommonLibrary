<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    style="@style/viewMatchMatch"
    android:layout_height="@dimen/dimen_50"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_base_title_back"
        style="@style/viewWrapWrap"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_13" />

    <TextView
        android:id="@+id/iv_base_title_center"
        style="@style/viewWrapWrap"
        android:layout_gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/dimen_22"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/iv_base_title_"
        style="@style/viewWrapWrap"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_13" />
</FrameLayout>